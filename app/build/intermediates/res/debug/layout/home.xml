<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainBox"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#dcdcdc"
    android:orientation="vertical" >

    <include layout="@layout/header" android:layout_height="60dp" 
        android:layout_width="fill_parent"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:src="#61298e" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#55ffffff">



        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:text="بدون نیاز به اینترنت"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#744f92"
                android:textSize="19dp" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="17dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:id="@+id/llDirectCharge"
                    android:background="@drawable/menu_btn_background"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="شارژ مستقیم"
                        android:id="@+id/txt8"
                        android:textColor="#744f92"
                        android:textSize="18dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:id="@+id/btnCodeCharge"
                    android:background="@drawable/menu_btn_background"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خرید کد شارژ"
                        android:id="@+id/txt7"
                        android:textColor="#744f92"
                        android:textSize="18dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:id="@+id/btn3g"
                    android:background="@drawable/menu_btn_background"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3G"
                            android:id="@+id/txt3g"
                            android:textColor="#744f92"
                            android:textSize="18dp"
                            android:paddingRight="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt5"
                            android:text="خرید بسته"
                            android:textColor="#744f92"
                            android:textSize="18dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:id="@+id/llShare"
                    android:background="@drawable/menu_btn_background"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ارسال برنامه به دوستان"
                        android:id="@+id/tvShare"
                        android:textColor="#744f92"
                        android:textSize="18dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:id="@+id/llShake"
                    android:background="@drawable/menu_btn_background"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="لرزشگر"
                        android:id="@+id/tvShake"
                        android:textColor="#744f92"
                        android:textSize="18dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:id="@+id/llSupport"
                    android:background="@drawable/menu_btn_background"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="پشتیبانی"
                        android:id="@+id/tvSupport"
                        android:textColor="#744f92"
                        android:textSize="18dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="این برنامه با سیم کارت های ایرانسل و رایتل قابل استفاده است."
                android:id="@+id/txt11"
                android:textColor="#ff5500"
                android:textSize="12dp"
                android:layout_marginTop="15dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout><!-- From: file:/C:/Users/user10/Desktop/new%20chargeiran/main/app/src/main/res/layout/home.xml -->