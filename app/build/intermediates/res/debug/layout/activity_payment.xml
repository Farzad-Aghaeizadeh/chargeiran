<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainBox"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#dcdcdc"
    android:orientation="vertical" >

     <include layout="@layout/header" android:layout_height="60dp" 
        android:layout_width="fill_parent"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:src="#61298e" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#99ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:gravity="center" android:background="#744f92">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="خرید کد شارژ"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|right"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="20dp"
                            android:gravity="fill_vertical|right"
                            android:padding="2dp"
                            android:background="#ffcc00"
                            android:id="@+id/BorderOperator"
                            android:layout_centerInParent="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ایرانسل"
                                android:id="@+id/TextOperator"
                                android:layout_gravity="center"
                                android:layout_marginRight="20dp"
                                android:textSize="25dp"
                                android:textColor="#ffffff" />

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:id="@+id/LogoOperator"
                                android:src="@drawable/irancellff"
                                android:layout_marginRight="10dp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اپراتور :"
                        android:id="@+id/txt2"
                        android:textSize="22dp"
                        android:textColor="#000000"
                        android:layout_marginRight="10dp"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.000 ریال"
                        android:id="@+id/TextCharge"
                        android:textSize="22dp"
                        android:textColor="#000000"
                        android:layout_marginRight="10dp"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نوع شارژ :"
                        android:id="@+id/txt3"
                        android:textSize="22dp"
                        android:textColor="#000000"
                        android:layout_marginRight="10dp"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center">


                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/num"
                        android:entries="@array/nums"
                        android:prompt="@string/spinnerPrompt"
                        android:popupBackground="#cccccc"
                        android:layout_weight="0.75"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="تعداد :"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000000"
                        android:textSize="22dp"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:layout_marginTop="-10dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="شماره کارت بانکی"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="2dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <EditText
                        android:id="@+id/bank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:ems="10"
                        android:hint="0000"
                        android:inputType="number"
                        android:layout_weight="0.25"
                        android:maxLength="4"
                        android:gravity="center"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionNext"/>

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView18"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="#000000" />

                    <EditText
                        android:id="@+id/banki"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:ems="10"
                        android:hint="0000"
                        android:inputType="number"
                        android:layout_weight="0.25"
                        android:maxLength="4"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:imeOptions="actionNext"/>

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView19"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="#000000" />

                    <EditText
                        android:id="@+id/bankii"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:ems="10"
                        android:hint="0000"
                        android:inputType="number"
                        android:layout_weight="0.25"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:maxLength="4"
                        android:gravity="center"
                        android:imeOptions="actionNext"/>

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView20"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="#000000" />

                    <EditText
                        android:id="@+id/bankiii"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:ems="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="0000"
                        android:inputType="number"
                        android:layout_weight="0.25"
                        android:maxLength="4"
                        android:gravity="center"
                        android:imeOptions="actionDone"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ذخیره شماره کارت"
                        android:id="@+id/txt6"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:textSize="16dp"
                        android:textColor="#000000" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chbSave"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:checked="false" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="کد شارژ به موبایلتان پیامک زده خواهد شد."
                    android:id="@+id/txt7"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/btnsubmit"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" android:background="@drawable/gradient"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="پرداخت"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:layout_marginTop="-10dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="جهت افزایش امنیت اطلاعات کارت بانکی شما،"
                    android:id="@+id/txt9"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رمز دوم، در نرم افزار ذخیره نمی شود."
                    android:id="@+id/txt10"
                    android:textColor="#000000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/debug"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/user10/Desktop/new%20chargeiran/main/app/src/main/res/layout/activity_payment.xml -->